@model ST10251759_PROG6212_POE.Models.EditUserViewModel

<div class="container-edit">
    <h2>Edit User Role</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input type="text" asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span> <!-- Validation error for PhoneNumber -->
        </div>

        <div class="form-floating mb-3">
            <input asp-for="IDNumber" class="form-control" placeholder="IDNumber" />
            <label asp-for="IDNumber">IDNumber</label>
            <span asp-validation-for="IDNumber" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="HomeAddress" class="form-control" placeholder="HomeAddress" />
            <label asp-for="HomeAddress">HomeAddress</label>
            <span asp-validation-for="HomeAddress" class="text-danger"></span>
        </div>


        <div class="form-floating mb-3">
            <input asp-for="Faculty" class="form-control" placeholder="Faculty" />
            <label asp-for="Faculty">Faculty</label>
            <span asp-validation-for="Faculty" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Role">Role</label>
            <select asp-for="Role" asp-items="@(new SelectList(Model.Roles))" class="form-control"></select>
        </div>

        <button type="submit" class="btn-edit btn-primary">Update</button>
        <a asp-action="Index" class="btn-edit btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<style>
