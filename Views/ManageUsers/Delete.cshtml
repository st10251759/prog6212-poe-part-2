@model ST10251759_PROG6212_POE.Models.DeleteUserViewModel

<div class="container-delete">
    <h2>Delete User</h2>
    <p>Are you sure you want to delete this user?</p>

    <div>
        <h4>Email: @Model.Email</h4>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-delete btn-danger">Delete</button>
        <a asp-action="Index" class="btn-delete btn-secondary">Cancel</a>
    </form>
</div>

<style>
    /* Global styling */
    body {
        font-family: Arial, sans-serif;
        background: url('/images/temple3.jpg') no-repeat center center fixed;
        background-size: cover;
        color: #03041c;
        margin: 0;
        padding: 0;
    }

    /* Container styling for Delete User page */
    .container-delete {
        max-width: 600px;
        margin: 100px auto;
        padding: 20px;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    /* Header styling */
    h2 {
        text-align: center;
        color: #03041c;
        margin-bottom: 30px;
        font-size: 24px;
        font-weight: bold;
    }

    p {
        text-align: center;
        color: #03041c;
        font-size: 18px;
        margin-bottom: 20px;
    }

    h4 {
        text-align: center;
        color: #03041c;
        margin-bottom: 30px;
    }

    /* Button styling */
    .btn-delete {
        width: 100%;
        padding: 12px;
        font-size: 18px;
        font-weight: bold;
        color: #ffffff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
        text-align: center;
        display: inline-block;
        margin-top: 10px;
    }

    .btn-danger {
        background-color: #d9534f;
    }

        .btn-danger:hover {
            background-color: #ffffff;
            color: #d9534f;
            border: 1px solid #d9534f;
        }

    .btn-secondary {
        background-color: #ccc;
        color: #03041c;
    }

        .btn-secondary:hover {
            background-color: #ffffff;
            color: #03041c;
            border: 1px solid #03041c;
        }
</style>
